#include "/home/cmpt201/a8-yinkak/include/shell.h"
#include "msgs.h"
#include <stdlib.h>
#include <stdio.h>
#include <unistd.h>
#include <sys/wait.h>
void execute_command(const char *command)
{
  pid_t child = fork(); //creates a child process

  if (child == -1)
  {
    perror(ERR_FORK);
    exit(EXIT_FAILURE);
  }
  if (child == 0){
    //child process
    execlp(command, command, (char *)NULL);
    perror("execlp");
    exit(EXIT_FAILURE);
  }
  else{
    //parent process
    wait(NULL);
  }
}
